extends index.pug

block content
    h2 Register a new packet (Type: 20)

    form(method='POST' action='/post-register-packet')
        div.form-group
            label(for='packetid') PacketID:
            input#packetid.form-control(type='text', placeholder='packet ID' name='packetid')
        div.form-group
            label(for='postage') Postage:
            input#postage.form-control(type='text', placeholder='15' name='postage')
        div.form-group
            label(for='security') Security:
            input#security.form-control(type='text', placeholder='300' name='security')
        div.form-group
            label(for='mintrust') Min trust:
            input#mintrust.form-control(type='text', placeholder='8' name='mintrust')
        div.form-group
            label(for='recipient') Recipient:
            input#recipient.form-control(type='text', value='7700165370820050502L' name='recipient')
        div.form-group
            label(for='nonce') Senders' nonce:
            input#nonce.form-control(type='text', placeholder='123' name='nonce')
        div.form-group
            label(for='passphrase') Passphrase of sender:
            input#passphrase.form-control(type='text', value='peanut hundred pen hawk invite exclude brain chunk gadget wait wrong ready' name='passphrase')
        button.btn.btn-warning(type='submit') Register

