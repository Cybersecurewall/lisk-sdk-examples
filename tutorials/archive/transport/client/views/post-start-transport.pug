extends index.pug

block content
    h2 Start Transport (Type: 21)

    form(method='POST' action='/post-start-transport')
        div.form-group
            label(for='packetid') Packet ID:
            input#packetid.form-control(type='text', placeholder='10881167371402274308L' name='packetid')
        div.form-group
            label(for='nonce') The nonce of the carrier:
            input#nonce.form-control(type='text', placeholder='123' name='nonce')
        div.form-group
            label(for='passphrase') Passphrase of the carrier:
            input#passphrase.form-control(type='text', value='endless focus guilt bronze hold economy bulk parent soon tower cement venue' name='passphrase')
        button.btn.btn-warning(type='submit') Start transport
